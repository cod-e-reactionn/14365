<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.projects.rinkesh.kakshaa.Upload"
    android:background="@color/black">

    <LinearLayout
        android:id="@+id/postlayout"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/postback"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:id="@+id/postbtnpanel"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:orientation="horizontal"
            android:background="@color/colorPrimary">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/post"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Compose Post"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:fontFamily="serif"
                android:textStyle="bold"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/updatestatus"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:src="@drawable/timetable"
                android:layout_marginStart="15sp"
                android:layout_marginLeft="10sp"
                android:layout_marginBottom="10sp"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10sp"
                android:layout_marginStart="10sp"
                android:layout_gravity="center"
                android:hint="Whats on your mind?"
                android:textSize="15sp"
                android:fontFamily="serif"
                android:textColorHint="@color/colorAccent"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/postpanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="@drawable/materialbutton"
                android:layout_marginTop="10sp"
                android:layout_margin="10sp"
                android:layout_marginBottom="10sp"
                android:text="Photo/Video"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"/>

            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="@drawable/materialbutton"
                android:layout_marginTop="10sp"
                android:layout_margin="10sp"
                android:layout_marginBottom="10sp"
                android:text="Document"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"/>

            <Button
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:background="@drawable/materialbutton"
                android:layout_marginTop="10sp"
                android:layout_margin="10sp"
                android:layout_marginBottom="10sp"
                android:text="..."
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"/>
        </LinearLayout>
    </LinearLayout>






</RelativeLayout>
